<?xml version="1.0" encoding="utf-8"?>
<mvc:View
    controllerName="sap.training.exc.controller.Main"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:tnt="sap.tnt">
    <tnt:ToolPage id="mainToolPage">
        <tnt:header>
            <tnt:ToolHeader>
                <Title text="My App" />
            </tnt:ToolHeader>
        </tnt:header>
        
        <tnt:sideContent>
            <tnt:SideNavigation id="mainPageSideNav" expanded="true">
                <tnt:NavigationList>
                    <tnt:NavigationListItem text="Home" icon="sap-icon://home" key="home"/>
                    <tnt:NavigationListItem text="Overview" icon="sap-icon://business-objects-experience" key="overview"/>
                    <tnt:NavigationListItem text="Detail" icon="sap-icon://detail-view" key="detail"/>
                </tnt:NavigationList>
            </tnt:SideNavigation>
        </tnt:sideContent>

        <tnt:mainContents>
            <Page id="mainPage" title="Main View">
                <content>
                    <Title text="Welcome to My App" titleStyle="H1"/>
                    <Text text="Select an option from the navigation menu"/>
                </content>
            </Page>
        </tnt:mainContents>
    </tnt:ToolPage>
</mvc:View>