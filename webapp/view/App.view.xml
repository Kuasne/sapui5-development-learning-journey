<mvc:View controllerName="sap.training.exc.controller.App"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns:m="sap.m"
          xmlns:tnt="sap.tnt">

  <tnt:ToolPage id="toolPage">

    <tnt:header>
      <tnt:ToolHeader>
        <m:Title text="Minha App" />
      </tnt:ToolHeader>
    </tnt:header>

    <tnt:sideContent>
      <tnt:SideNavigation id="sideNav" expanded="true">
        <tnt:NavigationList>
          <tnt:NavigationListItem text="Home" icon="sap-icon://home" key="home"/>
          <tnt:NavigationListItem text="Clientes" icon="sap-icon://customer" key="customers"/>
          <tnt:NavigationListItem text="Config." icon="sap-icon://action-settings" key="settings"/>
        </tnt:NavigationList>
      </tnt:SideNavigation>
    </tnt:sideContent>

    <tnt:mainContents>
      <m:Page id="pageMain" title="Conteúdo">
        <m:content>
          <m:Text text="Conteúdo principal aqui" />
          <m:Input value="Digite aqui ...." change=".onInputChange"/>
          <m:Button text="Clique" press=".onButtonPress"/>
        </m:content>
      </m:Page>
    </tnt:mainContents>
  </tnt:ToolPage>
</mvc:View>

