<mvc:View controllerName="sap.training.exc.controller.App"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns:m="sap.m"
          xmlns:tnt="sap.tnt"
          xmlns:smartField="sap.ui.comp.smartfield"
          xmlns:smartForm="sap.ui.comp.smartform"
          xmlns:core="sap.ui.core">
          

  <tnt:ToolPage id="toolPage">

    <tnt:header>
      <tnt:ToolHeader>
        <m:Title text="Minha App" />
      </tnt:ToolHeader>
    </tnt:header>

    <tnt:sideContent>
      <tnt:SideNavigation id="sideNav" expanded="true">
        <tnt:NavigationList>
          <tnt:NavigationListItem text="Home" icon="sap-icon://home" key="home"/>
          <tnt:NavigationListItem text="Clientes" icon="sap-icon://customer" key="customers"/>
          <tnt:NavigationListItem text="Config." icon="sap-icon://action-settings" key="settings"/>
        </tnt:NavigationList>
      </tnt:SideNavigation>
    </tnt:sideContent>

    <tnt:mainContents>
      <m:Page id="pageMain" title="ConteÃºdo">
        <m:content>
          <smartForm:SmartForm id="formProduct"
          editTogglable="true"
          editable="true"
          binding="{ODataModel>/Products('1239102')}"> <smartForm:layout>
              <smartForm:ColumnLayout columnsM="1" columnsL="1" columnsXL="1"/> </smartForm:layout>
          <smartForm:Group id="groupTransport" label="Detalhes do Produto"> <smartForm:GroupElement>
                  <smartField:SmartField id="idDeliveryTransport"
                      value="{DeliveryTransport}"
                      textInEditModeSource="ValueListNoValidation">
                          <smartField:configuration>
                              <smartField:Configuration displayBehaviour="idAndDescription"/>
                          </smartField:configuration>
                  </smartField:SmartField>
              </smartForm:GroupElement>
              </smartForm:Group>
      </smartForm:SmartForm>
        </m:content>
      </m:Page>
    </tnt:mainContents>
  </tnt:ToolPage>
</mvc:View>

