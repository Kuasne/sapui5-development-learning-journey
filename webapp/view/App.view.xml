<mvc:View controllerName="sap.training.exc.controller.App"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns:m="sap.m"
          xmlns:tnt="sap.tnt"
          xmlns:l="sap.ui.layout"
          xmlns:f="sap.ui.layout.form">

  <tnt:ToolPage id="toolPage">

    <tnt:header>
      <tnt:ToolHeader>
        <m:Title text="SAP Fiori" />
      </tnt:ToolHeader>
    </tnt:header>

    <tnt:sideContent>
      <tnt:SideNavigation id="sideNav" expanded="true">
        <tnt:NavigationList>
          <tnt:NavigationListItem text="Home" icon="sap-icon://home" key="home"/>
          <tnt:NavigationListItem text="Clientes" icon="sap-icon://customer" key="customers"/>
          <tnt:NavigationListItem text="Config." icon="sap-icon://action-settings" key="settings"/>
        </tnt:NavigationList>
      </tnt:SideNavigation>
    </tnt:sideContent>

    <tnt:mainContents>
      <m:Page id="pageMain" title="Conteúdo">
        <m:content>
    <f:SimpleForm id="simpleForm"
                  class="meuFormulario"
                  editable="true"
                  layout="ResponsiveGridLayout"
                  title="Formulário de Entrada"
                  labelSpanXL="1"
                  labelSpanL="3"
                  labelSpanM="3"
                  labelSpanS="12"
                  adjustLabelSpan="false"
                  emptySpanXL="4"
                  emptySpanL="4"
                  emptySpanM="4"
                  emptySpanS="0"
                  columnsXL="1"
                  columnsL="1"
                  columnsM="1"
                  singleContainerFullSize="false">
        <f:content>
            <m:Label text="Lote" required="true"/>
            <m:Input id="inputLote"
                     showValueHelp="true"
                     valueHelpRequest=".onValueHelpLote"
                     placeholder="Digite o lote..."/>

            <m:Label text="Data de Entrada" required="true"/>
            <m:DatePicker id="dateCreationLong"
                          placeholder="Selecione a data de entrada..."
                          displayFormat="long"/>

            <m:Label text="Material" required="true"/>
            <m:ComboBox id="selectMaterial" width="100%"
                       placeholder="Digite ou selecione o tipo de material..." showSecondaryValues="false" > <m:items>
                    <core:Item xmlns:core="sap.ui.core" key="" text="-- Selecione --"/>
                    <core:Item xmlns:core="sap.ui.core" key="BTQ" text="BTQ_LTQ"/>
                    <core:Item xmlns:core="sap.ui.core" key="BTQ_LTF" text="BTQ_LTF"/>
                    <core:Item xmlns:core="sap.ui.core" key="FTQ" text="FTQ"/>
                    <core:Item xmlns:core="sap.ui.core" key="LTQ" text="LTQ"/>
                    <core:Item xmlns:core="sap.ui.core" key="BQD" text="BQD_LTQ"/>
                    <core:Item xmlns:core="sap.ui.core" key="BFH_2F" text="BFH_2F"/>
                    <core:Item xmlns:core="sap.ui.core" key="GSPR" text="BFH_GSPRF"/>
                    </m:items>
            </m:ComboBox>

            <m:Label text="Price"/>
            <m:HBox alignItems="Center">  <m:Input id="inputPrice" placeholder="0.00" width="auto"/>
                <m:Select id="selectCurrency" width="10rem" class="sapUiTinyMarginBegin"> <m:items>
                        <core:Item xmlns:core="sap.ui.core" key="BRL" text="BRL"/>
                        <core:Item xmlns:core="sap.ui.core" key="EUR" text="EUR"/>
                        <core:Item xmlns:core="sap.ui.core" key="USD" text="USD"/>
                    </m:items>
                </m:Select>
            </m:HBox>

            <m:Label text="Quantity"/>
            <m:HBox alignItems="Center"> <m:Input id="inputQuantity" placeholder="0" width="auto"/>
                <m:Select id="selectUoM" width="10rem" class="sapUiTinyMarginBegin"> <m:items>
                        <core:Item xmlns:core="sap.ui.core" key="To" text="To"/>
                        <core:Item xmlns:core="sap.ui.core" key="Peças" text="Peças"/>
                        <core:Item xmlns:core="sap.ui.core" key="KG" text="KG"/>
                        <core:Item xmlns:core="sap.ui.core" key="UN" text="UN"/>
                    </m:items>
                </m:Select>
             </m:HBox>

            <core:Title xmlns:core="sap.ui.core" text=""/>

            <m:Label text="" /> <m:Button text="Salvar" type="Emphasized" press=".onSavePress"/>

        </f:content>
    </f:SimpleForm>
</m:content>
      </m:Page>
    </tnt:mainContents>
  </tnt:ToolPage>
</mvc:View>
