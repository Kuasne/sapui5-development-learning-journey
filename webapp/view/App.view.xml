<mvc:View controllerName="sap.training.exc.controller.App"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns:m="sap.m"
          xmlns:tnt="sap.tnt"
          xmlns:l="sap.ui.layout"
          xmlns:f="sap.ui.layout.form">

  <tnt:ToolPage id="toolPage">

    <tnt:header>
      <tnt:ToolHeader>
        <m:Title text="SAP Fiori" />
      </tnt:ToolHeader>
    </tnt:header>

    <tnt:sideContent>
      <tnt:SideNavigation id="sideNav" expanded="true">
        <tnt:NavigationList>
          <tnt:NavigationListItem text="Home" icon="sap-icon://home" key="home"/>
          <tnt:NavigationListItem text="Clientes" icon="sap-icon://customer" key="customers"/>
          <tnt:NavigationListItem text="Config." icon="sap-icon://action-settings" key="settings"/>
        </tnt:NavigationList>
      </tnt:SideNavigation>
    </tnt:sideContent>

    <tnt:mainContents>
      <m:Page id="pageMain" title="Conteúdo">
        <m:content>
    <f:SimpleForm id="simpleForm"
                  class="meuFormulario"
                  editable="true"
                  layout="ResponsiveGridLayout"
                  title="Formulário de Entrada"
                  labelSpanXL="1"
                  labelSpanL="3"
                  labelSpanM="3"
                  labelSpanS="12"
                  adjustLabelSpan="false"
                  emptySpanXL="4"
                  emptySpanL="4"
                  emptySpanM="4"
                  emptySpanS="0"
                  columnsXL="1"
                  columnsL="1"
                  columnsM="1"
                  singleContainerFullSize="false">
        <f:content>
            <m:Label text="Lote" required="true"/>
            <m:Input id="inputLote"
                     showValueHelp="true"
                     valueHelpRequest=".onValueHelpLote"
                     placeholder="Digite o lote..."/>

            <m:Label text="Data de Entrada" required="true"/>
            <m:DatePicker id="dateCreationLong"
                          placeholder="Selecione a data de entrada..."
                          displayFormat="long"/>

            <m:Label text="Categoria" required="true"/>
            <m:Input id="inputCategory"
                     showValueHelp="true"
                     valueHelpRequest=".onValueHelpCategory"
                     placeholder="Selecione a categoria..."/>

            <m:Label text="Price"/>
            <m:Input id="inputPrice" placeholder="0.00" width="60%">
                <m:layoutData>
                     <l:GridData span="XL7 L7 M7 S7" />
                </m:layoutData>
            </m:Input>
            <m:Select id="selectCurrency" width="40%" class="sapUiLargeMarginEnd">
                <m:items>
                    <core:Item xmlns:core="sap.ui.core" key="BRL" text="BRL"/>
                    <core:Item xmlns:core="sap.ui.core" key="EUR" text="EUR"/>
                    <core:Item xmlns:core="sap.ui.core" key="USD" text="USD"/>
                </m:items>
                 <m:layoutData>
                     <l:GridData span="XL5 L5 M5 S5" />
                </m:layoutData>
            </m:Select>
            <m:Label text="Quantity"/>
             <m:Input id="inputQuantity" placeholder="0" width="60%">
                <m:layoutData>
                     <l:GridData span="XL7 L7 M7 S7" />
                </m:layoutData>
            </m:Input>
            <m:Select id="selectUoM" width="40%">
                <m:items>
                    <core:Item xmlns:core="sap.ui.core" key="To" text="To"/>
                    <core:Item xmlns:core="sap.ui.core" key="Peças" text="Peças"/>
                    <core:Item xmlns:core="sap.ui.core" key="KG" text="KG"/>
                    <core:Item xmlns:core="sap.ui.core" key="UN" text="UN"/>
                </m:items>
            </m:Select>

            <m:Label text="" /> <m:Button text="Salvar" type="Emphasized" press=".onSavePress"/>

        </f:content>
    </f:SimpleForm>
</m:content>
      </m:Page>
    </tnt:mainContents>
  </tnt:ToolPage>
</mvc:View>
